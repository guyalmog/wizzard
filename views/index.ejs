</head>

<body>

  <header class="bg-primary">
    <div class="container">
      <!-- including navbar -->
      <%- include('partials/navbar', {login}) %>
    </div>
  </header>

  <!-- Banner -->
  <section class="banner-img">
    <div class="container">
      <div class="text">
        <h1 class="display-4">Wizzard Manager</h1>
